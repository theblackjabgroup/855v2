{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{% if section.settings.enable_strip %}
<div class="container" style="background-color: {{ section.settings.strip_container_bg_color }};">
    <div class="strip-right" style="background-color: {{ section.settings.strip_bg_color }};">
        <div class="strip-1">
            <div class="offer-text" style="color: {{ section.settings.strip_text_color }};">{{ section.settings.offer_text }} &rarr;</div>
            <div class="offer-text" style="color: {{ section.settings.strip_text_color }};">{{ section.settings.offer_text }} &rarr;</div>
            <div class="offer-text" style="color: {{ section.settings.strip_text_color }};">{{ section.settings.offer_text }} &rarr;</div>
        </div>
    </div>
    <div class="strip-left" style="background-color: {{ section.settings.strip_bg_color }};">
        <div class="strip-2">
            <div class="offer-text" style="color: {{ section.settings.strip_text_color }};">{{ section.settings.offer_text }} &rarr;</div>
            <div class="offer-text" style="color: {{ section.settings.strip_text_color }};">{{ section.settings.offer_text }} &rarr;</div>
            <div class="offer-text" style="color: {{ section.settings.strip_text_color }};">{{ section.settings.offer_text }} &rarr;</div>
        </div>
    </div>
</div>
{% endif %}


<footer style="background-color: {{ section.settings.footer_background_color }}; font-family: 'Inter', sans-serif;">
    <div class="footer-content" style="color: {{ section.settings.footer_text_color }};">
        <div class="footer-column">
            <h4 style="color: {{ section.settings.menu_title_color }};">{{ section.settings.STAY_CONNECTED_TITLE }}</h4>
            <form action="{{ shop.url }}" method="post">
                <div class="form-container">
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
                    <i class="fa-regular fa-envelope email-icon"></i>
                    <input type="email" name="email" class="email-input" placeholder="Enter your mail">
                   <button>{{ section.settings.subscribe_button_text | default: "Subscribe" }}</button>
                </div>
            </form>
        </div>



      
    <div class="footer-column">
            <h4 style="color: {{ section.settings.menu_title_color }};">{{ section.settings.menu_title | default: "ABOUT US" }}</h4>
            <ul>
                {% for link in linklists[section.settings.about_us_menu].links %}
                <li>
                    <a href="{{ link.url }}" style="color: {{ section.settings.menu_item_color }};">
                        {{ link.title }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>

        <div class="footer-column">
            <h4 style="color: {{ section.settings.menu_title_color }};">{{ section.settings.PRODUCTS_title | default: "PRODUCTS" }}</h4>
            <ul>
                {% for link in linklists[section.settings.products_menu].links %}
                <li>
                    <a href="{{ link.url }}" style="color: {{ section.settings.menu_item_color }};">
                        {{ link.title }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>

        <div class="footer-column">
            <h4 style="color: {{ section.settings.menu_title_color }};">{{ section.settings.CUSTOMER_SERVICES_title | default: "CUSTOMER SERVICES" }}</h4>
            <ul>
                {% for link in linklists[section.settings.customer_services_menu].links %}
                <li>
                    <a href="{{ link.url }}" style="color: {{ section.settings.menu_item_color }};">
                        {{ link.title }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>

        <div class="footer-column">
            <h4 style="color: {{ section.settings.menu_title_color }};">{{ section.settings.RESOURCES_title | default: "RESOURCES" }}</h4>
            <ul>
                {% for link in linklists[section.settings.resources_menu].links %}
                <li>
                    <a href="{{ link.url }}" style="color: {{ section.settings.menu_item_color }};">
                        {{ link.title }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>



<div class="footer-column">
  <h4>{{ section.settings.SOCIAL_MEDIA_TITLE | default: "SOCIAL MEDIA" }}</h4>
  {%- if section.settings.show_social_icons -%}
    <div class="social-icons">
      {%- if settings.social_facebook_link != blank -%}
        <a href="{{ settings.social_facebook_link }}" class="social-icon" aria-label="{{ 'general.social.links.facebook' | t }}">
          {{- 'icon-facebook.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_instagram_link != blank -%}
        <a href="{{ settings.social_instagram_link }}" class="social-icon" aria-label="{{ 'general.social.links.instagram' | t }}">
          {{- 'icon-instagram.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_youtube_link != blank -%}
        <a href="{{ settings.social_youtube_link }}" class="social-icon" aria-label="{{ 'general.social.links.youtube' | t }}">
          {{- 'icon-youtube.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_tiktok_link != blank -%}
        <a href="{{ settings.social_tiktok_link }}" class="social-icon" aria-label="{{ 'general.social.links.tiktok' | t }}">
          {{- 'icon-tiktok.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_twitter_link != blank -%}
        <a href="{{ settings.social_twitter_link }}" class="social-icon" aria-label="{{ 'general.social.links.twitter' | t }}">
          {{- 'icon-twitter.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_pinterest_link != blank -%}
        <a href="{{ settings.social_pinterest_link }}" class="social-icon" aria-label="{{ 'general.social.links.pinterest' | t }}">
          {{- 'icon-pinterest.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_snapchat_link != blank -%}
        <a href="{{ settings.social_snapchat_link }}" class="social-icon" aria-label="{{ 'general.social.links.snapchat' | t }}">
          {{- 'icon-snapchat.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_tumblr_link != blank -%}
        <a href="{{ settings.social_tumblr_link }}" class="social-icon" aria-label="{{ 'general.social.links.tumblr' | t }}">
          {{- 'icon-tumblr.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
      {%- if settings.social_vimeo_link != blank -%}
        <a href="{{ settings.social_vimeo_link }}" class="social-icon" aria-label="{{ 'general.social.links.vimeo' | t }}">
          {{- 'icon-vimeo.svg' | inline_asset_content -}}
        </a>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>
      
    </div>
</footer>

