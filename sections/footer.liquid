<script>
document.addEventListener("DOMContentLoaded", function () {
    // Newsletter Form Handling (keep existing code)
    const form = document.getElementById("newsletter-form");
    const newsletterSection = document.getElementById("newsletter-section1");
    const thankYouMessage = document.getElementById("thank-you-message");

    form.addEventListener("submit", function (event) {
        event.preventDefault();
        
        const emailInput = document.getElementById("email-input");
        const email = emailInput.value;
        if (!validateEmail(email)) {
            alert("Please enter a valid email address.");
            return;
        }
        
        newsletterSection.style.display = "none";
        thankYouMessage.style.display = "block";
    });

    function validateEmail(email) {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return re.test(email);
    }

    // Mobile Menu Dropdown Functionality
    function initializeMobileMenu() {
        if (window.innerWidth <= 480) {
            // Select all footer column h4s EXCEPT those in the newsletter section
            const footerTitles = document.querySelectorAll('.footer-column:not(#newsletter-section1) h4');
            
            footerTitles.forEach(title => {
                // Remove existing event listeners if any
                title.removeEventListener('click', handleTitleClick);
                // Add new event listener
                title.addEventListener('click', handleTitleClick);
            });
        }
    }

    function handleTitleClick(event) {
        // Prevent default behavior
        event.preventDefault();
        
        // Toggle active class on title
        this.classList.toggle('active');
        
        // Get the next sibling (ul or div element)
        const content = this.nextElementSibling;
        
        if (content) {
            // Special handling for social media section
            if (content.classList.contains('social-icons')) {
                content.classList.toggle('show');
            } else if (content.tagName === 'UL') {
                content.classList.toggle('show');
            }
            
            // Close other open menus
            const footerTitles = document.querySelectorAll('.footer-column:not(#newsletter-section1) h4');
            footerTitles.forEach(otherTitle => {
                if (otherTitle !== this) {
                    otherTitle.classList.remove('active');
                    const otherContent = otherTitle.nextElementSibling;
                    if (otherContent) {
                        if (otherContent.classList.contains('social-icons')) {
                            otherContent.classList.remove('show');
                        } else if (otherContent.tagName === 'UL') {
                            otherContent.classList.remove('show');
                        }
                    }
                }
            });
        }
    }

    // Initialize mobile menu on load
    initializeMobileMenu();

    // Handle window resize
    let resizeTimer;
    window.addEventListener('resize', function() {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(initializeMobileMenu, 250);
    });
});
</script>
