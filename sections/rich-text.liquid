{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}
<style>

.color-{{ section.settings.color_scheme }} .dot,
.color-{{ section.settings.color_scheme }} .dot-l {
background-color: currentColor;
}
.rich_text_button{
   border: 1px solid rgb(var(--color-button));  
  color:rgb(var(--color-button));  
}
  .layout1 ,
  .layout2 {
    padding-top:{{section.settings.padding_top}}px;  
  }
  .layout1,
  .layout2 {
    padding-bottom:{{section.settings.padding_bottom}}px;  
  }
  .layout1 h2 {
    font-size: {{ section.settings.heading_font_size }}px;
  }
  .layout1 .rich-text__text {
   font-size: {{ section.settings.text_font_size }}px;
  }
.layout2 {
   background-color: {{ section.settings.background_color }};
}
.layout2 h2 {
    font-size: {{ section.settings.heading_font_size }}px;
  }

.layout2 .rich-text__text {
     font-size: {{ section.settings.text_font_size }}px;
  }
  @media screen and (max-width: 749px) {
    .layout1 h2,
    .layout2 h2 {
      font-size: {{ section.settings.heading_font_size | times: 0.8 | round: 0 }}px;
    }
    .layout1 .rich-text__text,
    .layout2 .rich-text__text {
      font-size: {{ section.settings.text_font_size | times: 0.9 | round: 0 }}px;
    }
  }
</style>

<div class="rich-text-section color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {% if section.settings.layout_style == 'layout1' %} 
    <div class="layout1 page-width">
      <h2 class="richtext_heading">
       {% for block in section.blocks %}
                {% if block.type == 'heading' %}
                      {{ block.settings.heading }}
                {% endif %}
            {% endfor %}  
      </h2>
      <div class="decorative-dots">
        {% for i in (1..section.settings.dots_number1) %}
          <span class="dot"></span>
        {% endfor %}
      </div>
       <p class="richtext_subheading">
           {% for block in section.blocks %}
                {% if block.type == 'subheading' %}
                      {{ block.settings.caption }}
                {% endif %}
            {% endfor %}
       </p>
    <div class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {% for block in section.blocks %}
        {% if block.type == 'text' %}
            {{ block.settings.text }}
        {% endif %}
    {% endfor %}
</div>
         {% for block in section.blocks %}
    {% if block.type == 'button' and block.settings.show_button %}
        <div class="rich_text_button"> 
      <a href="{{ block.settings.button_link }}" class="rich_text_btn" >
        {{ block.settings.button_text }}
      </a>
        </div>
       {% endif %}
  {% endfor %}
         </div>
    
  {% else %}
    <div class="layout2">
    <div class="dots-container">
          <div class="side-dots left">
            {% for i in (1..section.settings.dots_number2) %}
                <span class="dot-l"></span>
          {% endfor %}
          </div>
        <div class="rich-text__blocks {{ section.settings.content_alignment }}">
          <h2 class="richtext_heading"> {% for block in section.blocks %}
                {% if block.type == 'heading' %}
                      {{ block.settings.heading }}
                {% endif %}
            {% endfor %}  </h2>
           <p class="richtext_subheading" >  {% for block in section.blocks %}
                {% if block.type == 'subheading' %}
                      {{ block.settings.caption }}
                {% endif %}
            {% endfor %}
          </p>
   <div class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {% for block in section.blocks %}
        {% if block.type == 'text' %}
            {{ block.settings.text }}
        {% endif %}
    {% endfor %}
</div>
           {% for block in section.blocks %}
    {% if block.type == 'button' and block.settings.show_button %}
        <div class="rich_text_button"> 
      <a href="{{ block.settings.button_link }}" class="rich_text_btn" >
        {{ block.settings.button_text }}
      </a>
        </div>
       {% endif %}
  {% endfor %}
        </div>
         <div class="side-dots right">
            {% for i in (1..section.settings.dots_number2) %}
                <span class="dot-l"></span>
            {% endfor %}
          </div>
      </div>
    </div>
  {% endif %}
</div>




{% schema %}
{
  "name": "Rich Text",
  "settings": [
  
    {
      "type": "select",
      "id": "layout_style",
      "label": "Choose Layout",
      "options": [
        {
          "value": "layout1",
          "label": "Layout 1"
        },
        {
          "value": "layout2",
          "label": "Layout 2"
        }
      ],
      "default": "layout1"
    },
     {
      "type": "range",
      "id": "dots_number1",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Number of dots layout1",
      "default": 10
    },
      {
      "type": "range",
      "id": "dots_number2",
      "min": 10,
      "max": 24,
      "step": 1,
      "label": "Number of dots layout2",
      "default": 10
    },
     {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 22
    },
   
  
    {
      "type": "range",
      "id": "text_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size",
      "default": 14
    },
   
    
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
  {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Transforming Healthcare with Innovative Solutions"
        }
      ]
    },
 {
      "type": "subheading",
      "name": "Sub Heading",
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Delivering Excellence in Medical Products"
        }
      ]
    },

 {
    "type": "text",
    "name": "Text",
    "settings": [{
        "type": "richtext", 
        "id": "text",
        "label": "Text"
    }]
},
{
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show Button",
          "default": false
        }
      ]
    }
    
],
 "presets": [
  {
    "name": "Rich Text",

    "blocks": [
      {
        "type": "heading",
        "settings": {
          "heading": "Your Heading"
        }
      },
      {
        "type": "subheading",
        "settings": {
          "caption":  "Delivering Excellence in Medical Products"
        }
      },
      {
        "type": "text",
        "settings": {
           "text": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>",
        }
      },
      {
        "type": "button",
        "settings": {
          "button_text": "Learn More",
          "button_link": "/",
          "show_button": true
        }
      }
    ]
  }
]
}
{% endschema %}
