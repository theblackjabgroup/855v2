/* Typography and Spacing */
.popup-message-layout2 p,
.popup-message-layout2 span,
.popup-message-layout2 h1,
.popup-message-layout2 h2,
.popup-message-layout2 h3,
.popup-message-layout2 h4,
.popup-message-layout2 a,
.popup-message-layout2 li,
.popup-message-layout2 ul,
.popup-message-layout2 ol {
  font-size: 16px; /* Base font size */
  line-height: 1.5;
  padding: 10px 20px 0 10px;
  color: var(--product_price_card);
}

/* Popup box styles */
.popup-box {
  max-width: 409.51px;
  height: fit-content;
  background-color: var(--card_foreground);
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20px;
  gap: 15px;
  box-shadow: 10px 10px rgb(var(--color-button));
  position: fixed;
  bottom: 30px;
  left: 25px;
  z-index: 15;
}

.popup-heading-container-layout2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.popup-heading-layout2 {
  font-size: 24px;
  padding: 10px 0 5px 10px;
  color: var(--product_price_card);
  font-family: "Fira Sans";
  font-weight: 600;
}

.popup-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 90%;
  padding: 10px 20px 0 10px;
  overflow: hidden;
}

.popup-email-container {
  display: flex;
  width: 90%;
  background-color: white;
  border-radius: 4px;
}

.popup-email-Icon {
    font-weight: 400;
    position: absolute;
    transform: translateY(93%);
    color: #888;
    font-size: 18px;
    pointer-events: none;
      margin-left: 20px;
}

.popup-email-input-layout2 {
  border: none;
  border-radius: 4px;
  width: 345px;
margin-left: 45px;
    padding: 11px;
}

.popup-close-btn {
  border: none;
  background-color: inherit;
  background: transparent;
  transition: transform 0.3s ease;
  align-items: center;
}

.popup-close-btn:hover {
  transform: scale(1.2);
  cursor: pointer;
}

.popup-close-btn svg {
  fill: var(--product_price_card);
}

.popup-subscribe-btn {
  font-family: "Inter", sans-serif;
  font-weight: 500;
  background: linear-gradient(
    to right,
    gray 50%,
    rgb(var(--color-button-text)) 50%
  );
  background-size: 200% 100%;
  color: rgb(var(--color-secondary-button-text));
  background-position: 100% 0;
  border: none;
  padding: 10px 10px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 16px;
  display: block;
  width: 164px;
  height: 48px;
  transition: background-position 1.5s ease-in-out, transform 0.3s ease;
  position: relative;
}
.popup-subscribe-btn:hover {
  background-position: 0 0;
  color: rgb(var(--color-secondary-button-text));
}

/* Media Querries  */

@media screen and (max-width: 600px) {
  /* Layout 2 responsive css  */
  .popup-box {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 300px;
  }
  .popup-heading-layout2 {
    font-size: 20px;
    font-weight: 400;
  }

  .popup-message-layout2 {
    font-weight: 300;
    font-size: 10px;
    max-width: 345px;
    width: fit-content;
    text-align: justify;
  }

  .popup-email-container {
    width: 100%;
  }

  .popup-email-input-layout2 {
    width: 236px;
  }

  .popup-subscribe-btn {
    font-size: 14px;
    font-weight: 400;
    z-index: 2;
    width: 50%;
  }
}

@media screen and (max-width: 400px) {
  /* Layout 2 responsive css  */

  .popup-box {
    position: fixed;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 308.5px;
  }

  .popup-heading-container-layout2 {
    width: 236px;
  }
  .popup-heading-layout2 {
    font-size: 20px;
    font-weight: 500;
    padding: 10px 0;
  }

  .popup-message-layout2 {
    font-weight: 300;
    font-size: 10px;
    width: 236px;
    text-align: justify;
  }

  .popup-message-layout2 p {
    padding: 0;
  }

  .popup-form {
    width: 100%;
    padding: 0;
  }

  .popup-email-container {
    width: 100%;
  }
  .popup-email-input-layout2 {
    width: 100%;
    padding-left: 2px;
  }

  .popup-subscribe-btn {
    padding: 1px 24px;
    width: 150px;
    height: 44px;
    text-align: center;
  }
}
