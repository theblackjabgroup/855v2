          "default": true
        },
        {
          "type": "select",
          "id": "direction",
          "label": "Scroll Direction",
          "options": [
            {
              "value": "left",
              "label": "Left to Right"
            },
            {
              "value": "right",
              "label": "Right to Left"
            }
          ],
          "default": "left"
        },
        {
