{% style %}
  {{ section.settings.font_title | font_face: font_display: 'swap' }}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .layout1 {
    text-align: center;
    padding: 20px;
  }
  .layout1 p{
  margin-bottom: 5px;
  }

  .layout1 h2 {
   font-family: {{ section.settings.font_title.family }}, {{ section.settings.font_title.fallback_families }};
    font-weight: {{ section.settings.font_title.weight }};
    font-style: {{ section.settings.font_title.style }};
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
  }

  .layout1 .rich-text__text {
    font-family: {{ section.settings.font_richtext.family }}, {{ section.settings.font_richtext.fallback_families }};
     font-weight: {{ section.settings.font_richtext.weight }};
    font-style: {{ section.settings.font_richtext.style }};
    margin: 0 auto;
   font-size: {{ section.settings.text_font_size }}px;
   color: {{ section.settings.text_color }};
   max-width: 600px;
   line-height: 1.6;
  }

  .decorative-dots {
    display: flex;
    justify-content: center;
    margin: 15px 0;
  }

  .dot {
    width: 7px;
    height: 7px;
    background-color:{{ section.settings.text_color }};
    border-radius: 50%;
    margin: 0 12px;
  }

  .layout2 {
    background-color: {{ section.settings.background_color }};
    text-align: center;
  }

  .layout2 h2 {
    font-family: {{ section.settings.font_title.family }}, {{ section.settings.font_title.fallback_families }};
    font-weight: {{ section.settings.font_title.weight }};
    font-style: {{ section.settings.font_title.style }};
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
  }

  .layout2 .rich-text__text {
    font-family: {{ section.settings.font_richtext.family }}, {{ section.settings.font_richtext.fallback_families }};
    font-weight: {{ section.settings.font_richtext.weight }};
    font-style: {{ section.settings.font_richtext.style }};
     margin: 0 auto;
     font-size: {{ section.settings.text_font_size }}px;
     color: {{ section.settings.text_color }};
     max-width: 600px;
     line-height: 1.6;
  }

  .dots-container {
    display: flex;
    
    justify-content: space-between;
    align-items: center;
    position: relative;
    max-width: 900px;
    margin: 0 auto;
  }

  .rich-text__blocks {
    width: 60%;
    text-align: center;
  }

  .side-dots {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .side-dots.left,
  .side-dots.right {
    width: 5%;
  }

  .side-dots.left {
    text-align: right; 
  }

  .side-dots.right {
    text-align: left; 
  }

  .dot-l {
    width: 10px;
    height: 10px;
    background-color: #FFFFFF;
    border-radius: 50%;
    margin:8px 0;
  }

  @media screen and (max-width: 749px) {
    .layout1 h2,
    .layout2 h2 {
      font-size: {{ section.settings.heading_font_size | times: 0.8 | round: 0 }}px;
    }

    .layout1 .rich-text__text,
    .layout2 .rich-text__text {
      font-size: {{ section.settings.text_font_size | times: 0.9 | round: 0 }}px;
    }

    .rich-text__blocks {
      width: 80%;
    }

    .side-dots {
      display: none;
    }
  }
{% endstyle %}

<div class="rich-text-section section-{{ section.id }}-padding">
  {% if section.settings.layout_style == 'layout1' %}
    <div class="layout1">
      <h2>{{ section.settings.heading | default: "Transforming Healthcare with Innovative Solutions" }}</h2>
      <div class="decorative-dots">
        {% for i in (1..10) %}
          <span class="dot"></span>
        {% endfor %}
      </div>
       <p>{{ section.settings.caption | default: "Delivering Excellence in Medical Products" }}</p>
      <div class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.text }}
      </div>
    </div>
  {% else %}
    <div class="layout2">
      <div class="dots-container">
        <div class="side-dots left">
          {% for i in (1..10) %}
            <span class="dot-l"></span>
          {% endfor %}
        </div>
        <div class="rich-text__blocks {{ section.settings.content_alignment }}">
          <h2>{{ section.settings.heading | default: "Transforming Healthcare with Innovative Solutions" }}</h2>
         
          <div class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.text }}
          </div>
        </div>
        <div class="side-dots right">
          {% for i in (1..10) %}
            <span class="dot-l"></span>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Rich Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Transforming Healthcare with Innovative Solutions"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Caption",
      "default": "Delivering Excellence in Medical Products"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "At [Your Company Name], we are dedicated to enhancing patient care and clinical efficiency through state-of-the-art medical products. Our commitment to innovation and quality ensures that healthcare providers have the tools they need to deliver the best possible outcomes for their patients."
    },
    {
      "type": "select",
      "id": "layout_style",
      "label": "Choose Layout",
      "options": [
        {
          "value": "layout1",
          "label": "Layout 1"
        },
        {
          "value": "layout2",
          "label": "Layout 2"
        }
      ],
      "default": "layout1"
    },
    {
      "type":"font_picker",
      "id":"font_title",
      "label": "Choose Heading Font",
      "default":"serif"
    },
    {
        "type":"font_picker",
      "id":"font_richtext",
      "label":"Choose Description Font",
      "default":"serif"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 16,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 22
    },
   
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "text_font_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text Font Size",
      "default": 14
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color (Layout 2)",
      "default": "#DCDDDD"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Rich Text"
    }
  ]
}
{% endschema %}