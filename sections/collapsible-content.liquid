{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}
<style>
.faq-item{
  background-color:{{section.settings.cardbackgroundcolor}};
}
.collapse_dot {
 background-color: {{section.settings.sectionbgcolor}};
}
.striaght-line {
  background-color: {{section.settings.sectionbgcolor}};
}
   .faq-item::before,
.faq-item::after {
  background-color:{{section.settings.sectionbgcolor}};
}
</style>

<div class="faq-section gradient">
  <div class='faq-main' style="background-color: {{ section.settings.sectionbgcolor }}" >
    <!-- Left side -->
    <div class="faq-header">
     <h2 class="faq-title" style="color: {{ section.settings.textcolor }}">{{ section.settings.caption | default: 'Help & Support' }}</h2>
  <p class="support-text" style="color: {{ section.settings.textcolor }}">{{ section.settings.description | default: "We're here to assist you with questions about products, sizing, or orders. Our customer support team is available via phone, email, or live chat." }}</p>
    </div>
  <!--right side -->
    <div class='faq-container '>
       {% for block in section.blocks %}
   
  <div class="faq-item ">
    <span class="faq-number " style="color: {{ section.settings.cardtextcolor }}">{{ block.settings.serialno}}</span>
          {% if section.settings.layout_style == 'layout1' %}
    <div class="dots-line" >
        <span class="collapse_dot"></span>
      <span class="collapse_dot"></span>
      <span class="collapse_dot"></span>
       <span class="collapse_dot"></span>
      <span class="collapse_dot"></span>
     
        <!-- Dots will be added by JavaScript -->
    </div>
      {% else %}
            <div class="striaght-line color-{{ section.settings.sectionbgcolor }}">
              </div>
    {% endif %}
            
  <div class="faq-content">
      <div class="faq-question">
        <div class="question-text" style="color: {{ section.settings.cardtextcolor }}">{{ block.settings.questiontext }}</div>
        <div class="faq-answer" style="color: {{ section.settings.cardtextcolor }} ">{{ block.settings.solutionans }}</div>
      </div>
      <div>

        <svg class="icon-arrow " style="color: {{ section.settings.cardtextcolor }}" width="24" height="24" viewBox="0 0 24 24">
          <path d="M7 10l5 5 5-5" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </div>
         
    </div>
            
             </div>
               {% endfor %}
  </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {

  const createDots = (dotsLine) => {
    const containerHeight = dotsLine.offsetHeight;
    const dotHeight = 9;
    const dotMargin = 8;
    const dotSpacing = dotHeight + dotMargin;
    const numberOfDots = Math.floor(containerHeight / dotSpacing);
    
    dotsLine.innerHTML = '';
    for (let i = 0; i < numberOfDots; i++) {
      const dot = document.createElement('span');
      dot.className = 'collapse_dot ';
      dotsLine.appendChild(dot);
    }
  };

  const handleFAQClick = (item) => {
    const answer = item.querySelector('.faq-answer');
    const arrow = item.querySelector('.icon-arrow');
    
    if (answer && arrow) {
      answer.classList.toggle('visible');
      arrow.classList.toggle('rotated');
      const dotsLine = item.querySelector('.dots-line');
      if (dotsLine) {
        setTimeout(() => createDots(dotsLine), 200);
      }
    }
  };


  document.querySelectorAll('.faq-item').forEach(item => {

    const arrow = item.querySelector('.icon-arrow');
    if (arrow) {
      arrow.addEventListener('click', (e) => {
        e.stopPropagation(); 
        handleFAQClick(item);
      });
    }

    const dotsLine = item.querySelector('.dots-line');
    if (dotsLine) {
      createDots(dotsLine);
    }
  });

 
  let resizeTimer;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(() => {
      document.querySelectorAll('.dots-line').forEach(createDots);
    }, 250);
  });
});
</script>

