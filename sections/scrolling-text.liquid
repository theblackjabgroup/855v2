{{ 'scrolling-text.css' | asset_url | stylesheet_tag }}

<div
  class="marquee-container color-{{ section.settings.color_scheme }}"
  style="
    --text-strip-speed: {{ section.settings.scroll_speed }}s;
             --first-strip-speed: {{ section.settings.scroll_speed }}s;
             --second-strip-speed: {{ section.settings.scroll_speed }}s;
             --strip-padding-top: {{ section.settings.strip_padding_top }}px;
             --strip-padding-bottom: {{ section.settings.strip_padding_bottom }}px;
             --third-strip-speed: {{ section.settings.scroll_speed }}s;
  "
>
  <div class="marquee-inner">
    {% for block in section.blocks %}
      {% if block.settings.show_strip %}
        {% case block.type %}
          {% when 'text_strip_1' %}
            <div
              class="text-only-marquee-content text-only-strip-content"
              style="animation-direction: {% if block.settings.direction == 'right' %}normal{% else %}reverse{% endif %};"
              {{ block.shopify_attributes }}
            >
              {% assign text_only_content = block.settings.text_content | strip %}
              {% for repeat in (1..10) %}
                <div class="text-only-marquee-item">
                  <span class="text-only-marquee-text">{{ text_only_content }}</span>
                </div>
              {% endfor %}
            </div>

          {% when 'content_strip_1' %}
            <div
              class="marquee-content first-strip-content"
              style="animation-direction: {% if block.settings.direction == 'right' %}normal{% else %}reverse{% endif %};"
              {{ block.shopify_attributes }}
            >
              {% for repeat in (1..section.settings.word_iterations) %}
                {% for i in (1..3) %}
                  {% assign text_key = 'text_' | append: i %}
                  {% assign image_key = 'image_' | append: i %}
                  {% if block.settings[text_key] != blank %}
                    <div class="marquee-item">
                      <span class="marquee-text">{{ block.settings[text_key] }}</span>
                      {% if block.settings[image_key] %}
                        <img
                          src="{{ block.settings[image_key] | img_url: 'master' }}"
                          alt="{{ block.settings[text_key] }}"
                          width="{{ section.settings.image_width }}"
                          height="{{ section.settings.image_height }}"
                          class="marquee-image"
                          loading="lazy"
                        >
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              {% endfor %}
            </div>

          {% when 'content_strip_2' %}
            <div
              class="marquee-content second-strip-content"
              style="animation-direction: {% if block.settings.direction == 'right' %}normal{% else %}reverse{% endif %};"
              {{ block.shopify_attributes }}
            >
              {% for repeat in (1..section.settings.word_iterations) %}
                {% for i in (1..3) %}
                  {% assign text_key = 'text_' | append: i %}
                  {% assign image_key = 'image_' | append: i %}
                  {% if block.settings[text_key] != blank %}
                    <div class="marquee-item">
                      <span class="marquee-text">{{ block.settings[text_key] }}</span>
                      {% if block.settings[image_key] %}
                        <img
                          src="{{ block.settings[image_key] | img_url: 'master' }}"
                          alt="{{ block.settings[text_key] }}"
                          width="{{ section.settings.image_width }}"
                          height="{{ section.settings.image_height }}"
                          class="marquee-image"
                          loading="lazy"
                        >
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              {% endfor %}
            </div>

          {% when 'content_strip_3' %}
            <div
              class="marquee-content third-strip-content"
              style="animation-direction: {% if block.settings.direction == 'right' %}normal{% else %}reverse{% endif %};"
              {{ block.shopify_attributes }}
            >
              {% for repeat in (1..section.settings.word_iterations) %}
                {% for i in (1..3) %}
                  {% assign text_key = 'text_' | append: i %}
                  {% assign image_key = 'image_' | append: i %}
                  {% if block.settings[text_key] != blank %}
                    <div class="marquee-item">
                      <span class="marquee-text">{{ block.settings[text_key] }}</span>
                      {% if block.settings[image_key] %}
                        <img
                          src="{{ block.settings[image_key] | img_url: 'master' }}"
                          alt="{{ block.settings[text_key] }}"
                          width="{{ section.settings.image_width }}"
                          height="{{ section.settings.image_height }}"
                          class="marquee-image"
                          loading="lazy"
                        >
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              {% endfor %}
            </div>
        {% endcase %}
      {% endif %}
    {% endfor %}
  </div>
</div>

